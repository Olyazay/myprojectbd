<UserControl x:Class="vtoraya_laba.UpDawn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vtoraya_laba"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="50">
    <!--<UserControl.DataContext>
        <local:BindingViewModel></local:BindingViewModel>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.RowSpan="2" Grid.Column="0" Grid.Row="0" Text="{Binding KolvoIpf, UpdateSourceTrigger=PropertyChanged}" FontSize="20">
        </TextBox>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding AddIpf, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock FontSize="23" HorizontalAlignment="Center" VerticalAlignment="Center" Name="Up1">
                ▲
            </TextBlock>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Command="{Binding ReduceIpf, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Height="38">
                ▼
            </TextBlock>
        </Button>
    </Grid>
</UserControl>
